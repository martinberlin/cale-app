<?xml version='1.0' encoding='utf-8'?>
    <widget id="io.cordova.cale" version="1.1.3"
        xmlns="http://www.w3.org/ns/widgets"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name short="cale">CALE</name>
    <description>
        CALE will let you configure your device using Bluetooth
    </description>
    <author email="martin@cale.es" href="https://cale.es">
        CALE Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:usesCleartextTraffic="true" />
        </edit-config>
        <resource-file src="res/values/colors.xml" target="/app/src/main/res/values/colors.xml" />
        <icon background="@color/background" density="mdpi" foreground="res/icon/cale-48.png" />
        <icon background="@color/background" density="hdpi" foreground="res/icon/cale-72.png" />
        <icon background="@color/background" density="xhdpi" foreground="res/icon/cale-96.png" />
        <icon background="@color/background" density="xxhdpi" foreground="res/icon/cale-144.png" />
        <icon background="@color/background" density="xxxhdpi" foreground="res/icon/cale-192.png" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

</widget>
